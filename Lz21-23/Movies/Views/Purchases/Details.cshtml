@model Movies.ViewModels.PurchaseViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Purchase</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Person)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Person)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
</div>
<div>
    <h2>Tickets</h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Movie
                </th>
                <th>
                    Date and time
                </th>
                <th>
                    Row and Seat
                </th>
                <th>
                    Hall
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model.Tickets)
            {
                <tr>
                    <td>
                        <a href="/Movies/Details/@t.MovieId">@t.Movie</a>
                    </td>
                    <td>
                        @t.SessionTime
                    </td>
                    <td>
                        @t.Seat
                    </td>
                    <td>
                        @t.Hall
                    </td>
                    <td>
                        @t.Price
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@t.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PurchaseId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

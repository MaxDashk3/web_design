@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Розпродаж книг</h1>
    <table>
        <tr>
            <th>Назва книги</th>
            <th>Автор</th>
            <th>Ціна</th>
            <th></th>
        </tr>
        @{
            foreach (var b in ViewBag.Books)
            {
                <tr>
                    <td>@b.Name</td>
                    <td>@b.Author</td>
                    <td>@b.Price</td>
                    <td><a href="/Home/Buy/@b.Id">Купити</a></td>
                </tr>
            }
        }
    </table>
</div>

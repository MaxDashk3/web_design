@model Movies.Models.Ticket

@{
    ViewData["Title"] = "Create Ticket";
}

<h1>Create a ticket</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/Session/CreateTicket" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input name="SessionId" value="@ViewBag.Session.Id" hidden />
            </div>
            <div class="form-group">
                <label asp-for="SeatRow" class="control-label">Row</label>
                <select asp-for="SeatRow" class="form-control">
                    @for(int i=1; i <= ViewBag.Session.Hall.Rows; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="SeatRow" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeatNum" class="control-label">Seat</label>
                <select asp-for="SeatNum" class="form-control">
                    @for (int i=1; i <= ViewBag.Session.Hall.SeatsPerRow; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="SeatNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

